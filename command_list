FROM openjdk:8-jdk-alpine as build
WORKDIR /workspace/app

COPY mvnw .
COPY .mvn .mvn
RUN ./mvnw -v
COPY pom.xml .
COPY src src

RUN ./mvnw install -DskipTests
RUN mkdir -p target/dependency && (cd target/dependency; jar -xf ../*.jar)

FROM openjdk:8-jdk-alpine
VOLUME /tmp
ARG DEPENDENCY=/workspace/app/target/dependency
COPY --from=build ${DEPENDENCY}/BOOT-INF/lib /app/lib
COPY --from=build ${DEPENDENCY}/META-INF /app/META-INF
COPY --from=build ${DEPENDENCY}/BOOT-INF/classes /app
ENTRYPOINT ["java","-cp","app:app/lib/*","hello.Application"]

docker build -f Dockerfile -t demo:1.0 . && kind load docker-image demo:1.0 && kubectl apply -f demo.yaml && kubectl && kubectl rollout restart deployment demo
docker build -f Dockerfile-native -t demo-native:1.0 . && kind load docker-image demo-native:1.0 && kubectl apply -f demo-native.yaml &&  kubectl rollout restart deployment demo-native